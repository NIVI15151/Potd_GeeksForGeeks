class Solution {
  public:
    long long maxDiamonds(int A[], int N, int K) {
        long long ans = 0;
        priority_queue<int, vector<int>> pq;
        for(int i=0;i<N;i++)
        {
            pq.push(A[i]);
        }
        for(int i=0;i<K;i++)
        {
            int mxval = pq.top();
            pq.pop();
            ans += mxval;
            pq.push(mxval/2);
        }
        return ans;
    }
};
